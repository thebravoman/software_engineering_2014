//require 'spec_helper'

describe Video do
	vid = Video.new
	context '#success?' do
		it {expect(video.id).to be != nil}
	end
	describe '#tags' do
		context 'has/is being given tags?' do
			it {expect(video.snippet.tags).to be > 0}
		end
	end
	describe '#exists?' do
		context 'nil?' do
			it {expect(video.id).to be nil}
		end
	end
	describe '#delete' do
		let(:vid) { {id: 'video-id'} }
			it { expect(video.delete).to be true }
			it { expect{video.delete}.to change{video.exists?} }
		end
	end
end
